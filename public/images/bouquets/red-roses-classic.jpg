<!-- Classic Red Roses Bouquet -->
<svg width="400" height="500" viewBox="0 0 400 500" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <radialGradient id="redRose" cx="50%" cy="50%" r="50%">
      <stop offset="0%" style="stop-color:#ff6b6b;stop-opacity:1" />
      <stop offset="70%" style="stop-color:#ee5a52;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#c44569;stop-opacity:1" />
    </radialGradient>
    <linearGradient id="stem" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#6ab04c;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#2f3542;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Background -->
  <rect width="400" height="500" fill="#f8f9fa"/>
  
  <!-- Bouquet Wrapper -->
  <path d="M 150 350 Q 200 380 250 350 L 250 450 Q 200 470 150 450 Z" fill="#8b4513" opacity="0.8"/>
  
  <!-- Stems -->
  <rect x="195" y="300" width="6" height="120" fill="url(#stem)"/>
  <rect x="185" y="310" width="5" height="110" fill="url(#stem)"/>
  <rect x="205" y="305" width="5" height="115" fill="url(#stem)"/>
  <rect x="175" y="320" width="4" height="100" fill="url(#stem)"/>
  <rect x="215" y="315" width="4" height="105" fill="url(#stem)"/>
  
  <!-- Red Roses -->
  <g transform="translate(200,200)">
    <!-- Center Rose -->
    <circle cx="0" cy="0" r="35" fill="url(#redRose)"/>
    <circle cx="0" cy="0" r="25" fill="#ff4757" opacity="0.8"/>
    <circle cx="0" cy="0" r="15" fill="#ff3838" opacity="0.6"/>
    
    <!-- Surrounding Roses -->
    <circle cx="-45" cy="25" r="32" fill="url(#redRose)"/>
    <circle cx="50" cy="20" r="30" fill="url(#redRose)"/>
    <circle cx="-25" cy="-40" r="28" fill="url(#redRose)"/>
    <circle cx="30" cy="-35" r="33" fill="url(#redRose)"/>
    <circle cx="-60" cy="-15" r="25" fill="url(#redRose)"/>
    <circle cx="65" cy="-10" r="27" fill="url(#redRose)"/>
    <circle cx="0" cy="60" r="29" fill="url(#redRose)"/>
    
    <!-- Inner petals for depth -->
    <circle cx="-45" cy="25" r="20" fill="#ff4757" opacity="0.7"/>
    <circle cx="50" cy="20" r="18" fill="#ff4757" opacity="0.7"/>
    <circle cx="-25" cy="-40" r="16" fill="#ff4757" opacity="0.7"/>
    <circle cx="30" cy="-35" r="21" fill="#ff4757" opacity="0.7"/>
  </g>
  
  <!-- Leaves -->
  <ellipse cx="140" cy="250" rx="12" ry="20" fill="#27ae60" transform="rotate(-20)"/>
  <ellipse cx="260" cy="245" rx="10" ry="18" fill="#27ae60" transform="rotate(25)"/>
  <ellipse cx="170" cy="280" rx="8" ry="15" fill="#27ae60" transform="rotate(-45)"/>
  <ellipse cx="230" cy="275" rx="9" ry="16" fill="#27ae60" transform="rotate(30)"/>
  
  <!-- Ribbon -->
  <ellipse cx="200" cy="350" rx="40" ry="8" fill="#ffd700"/>
  <path d="M 160 350 Q 150 340 140 350 Q 150 360 160 350" fill="#ffd700"/>
  <path d="M 240 350 Q 250 340 260 350 Q 250 360 240 350" fill="#ffd700"/>
</svg>