<!-- Delivery Person with Bouquets -->
<svg width="300" height="400" viewBox="0 0 300 400" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="uniform" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#4a90e2;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#357abd;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Background -->
  <rect width="300" height="400" fill="#e8f4fd"/>
  
  <!-- Delivery Person -->
  <g transform="translate(150,200)">
    <!-- Head -->
    <circle cx="0" cy="-80" r="25" fill="#fdbcb4"/>
    
    <!-- Hair -->
    <ellipse cx="0" cy="-90" rx="28" ry="15" fill="#8b4513"/>
    
    <!-- Eyes -->
    <circle cx="-8" cy="-85" r="2" fill="#000"/>
    <circle cx="8" cy="-85" r="2" fill="#000"/>
    
    <!-- Smile -->
    <path d="M -8 -75 Q 0 -70 8 -75" stroke="#000" stroke-width="2" fill="none"/>
    
    <!-- Body -->
    <rect x="-20" y="-55" width="40" height="60" fill="url(#uniform)" rx="5"/>
    
    <!-- Arms -->
    <ellipse cx="-35" cy="-30" rx="12" ry="25" fill="url(#uniform)" transform="rotate(-20)"/>
    <ellipse cx="35" cy="-30" rx="12" ry="25" fill="url(#uniform)" transform="rotate(20)"/>
    
    <!-- Hands -->
    <circle cx="-45" cy="-10" r="8" fill="#fdbcb4"/>
    <circle cx="45" cy="-10" r="8" fill="#fdbcb4"/>
    
    <!-- Legs -->
    <rect x="-15" y="5" width="12" height="40" fill="#2c3e50"/>
    <rect x="3" y="5" width="12" height="40" fill="#2c3e50"/>
    
    <!-- Shoes -->
    <ellipse cx="-9" cy="50" rx="8" ry="5" fill="#000"/>
    <ellipse cx="9" cy="50" rx="8" ry="5" fill="#000"/>
  </g>
  
  <!-- Bouquet in hand -->
  <g transform="translate(120,170)">
    <rect x="0" y="0" width="4" height="30" fill="#6b8e23"/>
    <circle cx="2" cy="-5" r="8" fill="#ff6b9d"/>
    <circle cx="-5" cy="-8" r="6" fill="#fd79a8"/>
    <circle cx="8" cy="-6" r="7" fill="#ff7675"/>
    <ellipse cx="-3" cy="5" rx="3" ry="8" fill="#00b894" transform="rotate(-30)"/>
    <ellipse cx="7" cy="3" rx="3" ry="6" fill="#00b894" transform="rotate(20)"/>
  </g>
  
  <!-- Delivery bag with flowers -->
  <g transform="translate(200,180)">
    <rect x="0" y="0" width="30" height="25" fill="#8b4513" rx="3"/>
    <rect x="2" y="2" width="26" height="21" fill="#deb887"/>
    
    <!-- Flowers peeking out -->
    <circle cx="8" cy="-3" r="4" fill="#ff6b9d"/>
    <circle cx="15" cy="-5" r="3" fill="#ffd700"/>
    <circle cx="22" cy="-2" r="4" fill="#a29bfe"/>
  </g>
  
  <!-- Delivery truck/bike in background -->
  <g transform="translate(50,320)">
    <rect x="0" y="0" width="60" height="30" fill="#4a90e2" rx="5"/>
    <rect x="5" y="5" width="50" height="20" fill="#e8f4fd"/>
    <circle cx="15" cy="35" r="8" fill="#2c3e50"/>
    <circle cx="45" cy="35" r="8" fill="#2c3e50"/>
    <circle cx="15" cy="35" r="5" fill="#95a5a6"/>
    <circle cx="45" cy="35" r="5" fill="#95a5a6"/>
    
    <!-- Company logo on truck -->
    <text x="30" y="18" text-anchor="middle" font-family="sans-serif" font-size="8" fill="#4a90e2">RAMANA</text>
  </g>
  
  <!-- Motion lines -->
  <path d="M 20 300 Q 30 295 40 300" stroke="#bdc3c7" stroke-width="2" fill="none" opacity="0.6"/>
  <path d="M 25 310 Q 35 305 45 310" stroke="#bdc3c7" stroke-width="2" fill="none" opacity="0.6"/>
  
  <!-- Text -->
  <text x="150" y="380" text-anchor="middle" font-family="sans-serif" font-size="14" font-weight="bold" fill="#2c3e50">Free Delivery</text>
</svg>